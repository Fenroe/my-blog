---
import RootLayout from "./RootLayout.astro";
import Prose from "../components/Prose.astro";
import { format } from "date-fns";

const { frontmatter } = Astro.props;

const { title, description, date } = frontmatter;
---

<RootLayout {title} {description}>
  <section
    class="max-w-screen-md mx-auto bg-schemewhite p-3 flex flex-col gap-2 dark:bg-schemeblack"
  >
    <div class="flex flex-col gap-1">
      <h1 class="text-4xl font-bold text-schemeblack dark:text-schemewhite">
        {title}
      </h1>
    </div>
    <h3 class="text-schemedarkgray font-medium">
      {format(new Date(date), "do MMMM y")}
    </h3>
  </section>
  <section
    class="max-w-screen-md mx-auto bg-schemewhite p-3 dark:bg-schemeblack"
  >
    <Prose>
      <slot />
    </Prose>
  </section>
</RootLayout>
